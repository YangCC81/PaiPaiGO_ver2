<link rel="stylesheet" href="~/css/CC_members.css" />
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<script src="~/jQuery-TWzipcode-master/jquery.twzipcode.js"></script>
<script src="~/jQuery-TWzipcode-master/twzipcode.js"></script>

<div class="row">
    <div class="col-lg-2 col-1"></div>
    <div class="d-flex col-lg-8 col-10">
        <!-- 圖片 -->
        <div class="mw-25 mt-5 h-auto c_loginImg col-lg-7"><img src="~/img/memberForgot.png" style="width: 600px;"></div>
        <!-- 登入資訊框框div -->
        <div class="c_singinDiv rounded mw-50 mt-5 col-lg-5 col-12" style="background-color:rgb(253, 249, 249,0.6);">
            <!-- 標頭 -->
            <br>
            <div class="text-center fs-4">忘記密碼</div>
            <br>
            <span class="fs-5">請輸入所登錄的Email地址。</span>
			<br>
            <span class="fs-6">
				若無法使用登錄Email，麻煩請來信聯繫<a href="mailto:paipaigo001@@gmail.com">客服</a>。
            </span>

            <form asp-action="ForgotPassword">
                <br><br>
                <div>
                    <div class="col-md-12">
                        <label for="inputEmail" class="form-label fs-5">Email地址</label>
                        <input type="email" class="form-control mt-0" id="inputEmail" name="email">
                    </div>
                </div>
                <br>
                <!-- 寄出按鈕 -->
                <button class="rounded mt-3 border-0 w-100  bg-info fs-5" type="submit">發送驗證郵件</button>
            </form>
        </div>
    </div>
</div>

@*帳號狀態異常*@
<div class="modal fade" id="loginFailureModal" tabindex="-1" role="dialog" aria-labelledby="loginFailureModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginFailureModalLabel">發送驗證郵件失敗</h5>
            </div>
            <div class="modal-body">
                <p>您的帳號狀態有異常，請來信詢問<a href="mailto:paipaigo001@@gmail.com">客服</a>。</p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="loginFailureModal2" tabindex="-1" role="dialog" aria-labelledby="loginFailureModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginFailureModalLabel2">發送驗證郵件失敗</h5>
            </div>
            <div class="modal-body">
                <p>Email地址不正確，請檢查您的Email地址並再試一次。</p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="loginFailureModal3" tabindex="-1" role="dialog" aria-labelledby="loginFailureModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginFailureModalLabel3">已發送驗證郵件</h5>
            </div>
            <div class="modal-body">
                <p>驗證郵件已發送至您的Email地址，請登入Email確認後即可開始重設密碼。</p>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Status == "異常") {
    <script>
        $(document).ready(function () {
            $('#loginFailureModal').modal('show');
        @*顯示 Modal*@
        });
    </script>
}
else if (ViewBag.Status == "空的") {
    <script>
        $(document).ready(function () {
            $('#loginFailureModal2').modal('show');
        @*顯示 Modal*@
        });
    </script>
}
else if (ViewBag.Status == "正常") {
    <script>
        $(document).ready(function () {
            $('#loginFailureModal3').modal('show');
        @*顯示 Modal*@
                });
    </script>
}
