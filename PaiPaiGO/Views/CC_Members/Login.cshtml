}
else if (ViewBag.Status == "空的") {
    <script>
        Swal.fire({
            icon: 'error',
            title: '登入失敗',
            text: 'Email地址或密碼不正確，請檢查您的登入資訊並再試一次。',
            timer: 2000,
            timerProgressBar: true,
            confirmButtonColor: '#00acee',
        })
    </script>
}