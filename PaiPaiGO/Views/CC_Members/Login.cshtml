@*<h1>目前sessionID: @ViewBag.se</h1>*@
<div class="row">
    <div class="col-lg-2 col-1"></div>
    <div class="d-flex col-lg-8 col-10">
        <!-- 圖片 -->
        <div class="mw-50 mt-5 h-auto c_loginImg col-lg-7"><img src="~/img/memberLogin.jpg" class="d-block" style="width: 700px;"></div>
        <!-- 登入資訊框框div -->
        <div class="c_singinDiv rounded mw-50 mt-5 col-lg-5 col-12" style="background-color:rgb(253, 249, 249,0.6);">
            <!-- 標頭 -->
            <div class="text-center fs-4" onclick="loginMember()">登入帳號<br> <br></div>
            <form asp-action="Login">
                <!-- 登入帳號 -->
                <div class="d-flex fs-6">
                    <img class="me-2 mt-3 mb-3" src="~/img/CC_user.png" style="height: 30px;">
                    <div class="form-floating  mb-3 w-100">
                        <input type="email" class="form-control" id="EmailInput" name="username" placeholder="name@example.com">
                        <label for="floatingInput">Email地址</label>
                    </div>
                </div>
                <!-- 登入密碼 -->
                <div class="d-flex fs-6">
                    <img class="me-2  mt-3" src="~/img/CC_padlock.png" style="height: 30px;">
                    <div class="form-floating w-100">
                        <input type="password" class="form-control" id="PasswordInput" name="password" placeholder="Password">
                        <label for="floatingPassword">密碼</label>
                    </div>
                </div>

                <!-- 忘記密碼 -->
                
                    
                


                <!-- 登入按鈕 -->
                @*<button class="rounded mt-3 border-0 w-100 bg-info fs-5" type="submit">登入</button>*@
                <button class="CCbtn_submit rounded mt-3 border-0 w-100 fs-5" type="submit"><span>登入</span></button>
				<!-- 註冊連結 -->
                <div class="d-flex mt-3 justify-content-between fs-5">
                    <a href="/CC_Members/ForgotPassword" style="text-decoration:none">忘記密碼?</a>
                    <div>還沒有帳號嗎?<a href="/CC_Members/Resgister" style="text-decoration:none">立即註冊</a></div>
				</div>
            </form>
        </div>
    </div>
</div>

@*帳號狀態異常*@
