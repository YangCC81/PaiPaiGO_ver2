
@model X.PagedList.IPagedList<PaiPaiGO.Models.Mission>

@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common;
<head>
    <title>Document</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- JQ -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    @*選地區zipcode*@
    <script src="~/jQuery-TWzipcode-master/jquery.twzipcode.js"></script>
    <script src="~/jQuery-TWzipcode-master/twzipcode.js"></script>
</head>

<style>

    .body {
        font-size: 50px;
    }

    .panel-control {
        position: absolute;
        opacity: 0;
    }

    .active {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    #dropdownMenuButton1 {
        width:100px;
        margin-left: 40px;
    
    }

    .tab-group label {
        display: inline-block;
        padding: 10px 30px;
        border: 1px solid #ccc;
        border-bottom: none;
        background-color: #ccc;
    }



    .content {
        display: none;
    }


    #radio1:checked ~ .tab-group [for="radio1"],
    #radio2:checked ~ .tab-group [for="radio2"],
    #radio3:checked ~ .tab-group [for="radio3"] {
        background-color: #fff;
    }


    #radio1:checked ~ .content-group .content1,
    #radio2:checked ~ .content-group .content2,
    #radio3:checked ~ .content-group .content3 {
        display: block
    }

    .gridcontainer {
        margin-top: 20px;
    }

    .card {
        height: 450px;
        width: 325px;
        margin: auto;
        margin-top: 30px;
        margin-left:46px;
        margin-right: 23px;
        justify-content: space-around;
        border-radius: 20px;
        border: solid 3px;
        border-color: darkgreen;
    }

        .card:hover {
            transform: scale(1.07,1.07);
            border-color: #1CFFFF;
        }

    .card-img-top {
        position: relative;
        width: 245px;
        height: 200px;
        margin: auto;
        margin-top: 15px;
    }

    .add-cart {
        background: orange;
        color: bisque;
    }

    /* 修改页码项的样式 */
    .page-item {
        display: flex;
        justify-content: center;
        margin: 0 5px; /* 调整页码项之间的间距 */
    }

    /* 修改页码链接的样式 */
    .page-link {
        display: flex;
        justify-content: center;
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        border: 1px solid #007bff;
        border-radius: 5px;
        text-decoration: none;
    }

        /* 修改激活页码链接的样式 */
        .page-link.active {
            background-color: #fff;
            color: #007bff;
        }

        /* 修改禁用页码链接的样式 */
        .page-link.disabled {
            background-color: #ccc;
            color: #555;
            cursor: not-allowed;
        }

</style>
<body>



    <div class="row HbodyRow">
        <div class="col-1 ">
        </div>

        <div class="col-10 ">
            <div class="panel-group">
                <input type="radio" name="panel-radio" id="radio1" class="panel-control" checked>
                <input type="radio" name="panel-radio" id="radio2" class="panel-control">
                <input type="radio" name="panel-radio" id="radio3" class="panel-control">
                <div class="tab-group">
                    <label for="radio1" class="active" style="background-color: #abd9c5;">依位置找</label>
                    <label for="radio2" class="active" style="background-color: #99e1b1;">代購</label>
                    <label for="radio3" class="active" style="background-color: #79D699;">代排隊</label>
                </div>

                <div class="content-group">
                    <div class="content content1" style="background-color: #abd9c5;">



                        <div id="twzipcode" class="row " >

                            <div class="col-1">
                                <div data-role="county" data-name="county" data-value="" id="dropdownMenuButton1"></div>
                            </div>

                            <div class="col-1">
                                <div data-role="district" data-name="district" data-value="" id="dropdownMenuButton1"></div>
                            </div>

                            <!-- 隱藏的郵遞區號欄位，值可以 SQL 抓取 -->
                            <div class="col-1" >
                                <div data-role="zipcode" data-style="form-control" data-name="zipcode" data-value="" id="dropdownMenuButton1"></div>
                            </div>
                      

                            <div class="col-7"></div>



                            @* 搜尋框 *@

                                <div class="col-2  justify-content-end">

                                    <form asp-controller="YH_CasePages" asp-action="YH_CasePage" class="d-flex">
                                        <input class="form-control me-2" type="text" name="SearchString" placeholder="請輸入關鍵字">
                                        <input type="submit" value="搜尋" />
                                    </form>
                                </div>
                            </div>
                   





                      
                            
                           

                            


                            @* 接案卡片 *@
                            <div class="row gridcontainer">
                              @foreach (var item in Model)
                               {


                                <div class="card col-3 ">
                                    <img src="~/image/images-7.jpeg" class="card-img-top">
                                    <div class="card-body">
                                        <h3 class="card-title">任務名稱</h3>
                                            <p class="card-text bg-warning">@Html.DisplayFor(modelItem => item.MissionName)</p>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                            <li class="list-group-item">地點：@Html.DisplayFor(modelItem => item.LocationCity)@Html.DisplayFor(modelItem => item.LocationDistrict)</li>
                                            <li class="list-group-item">結束時間：@Html.DisplayFor(modelItem => item.DeadlineDate)@Html.DisplayFor(modelItem => item.DeadlineTime)</li>
                                            <li class="list-group-item">報價：NT$@Html.DisplayFor(modelItem => item.MissionAmount)</li>
                                    </ul>
                                    <div class="card-body">
                                        <button class="add-cart">我要接案</button>
                                    </div>
                                </div>

                            }

                            </div>

                           @*  分頁跳轉 *@
                            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                            @Html.PagedListPager(Model, page => Url.Action("YH_CasePage",
                            new { page}), new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" }})





                </div>
            </div>
        </div>
        <div class="col-1 ">
        </div>
    </div>

</body>



<script>
    // TWzipcode.js
    $("#twzipcode").twzipcode({
        "zipcodeIntoDistrict": false,
        "css": ["city form-control", "town form-control"],
        "countyName": "City", @*// 指定城市 select name*@
        "districtName": "Area", @*// 指定地區 select name*@
    @*"zipcodeName": "zipcodeField"*@ @*// 保留郵遞區號欄位，但不顯示*@
                })

    console.log(twzipcode.get());
</script>
