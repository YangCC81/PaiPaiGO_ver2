			<button type="button" class="btn btn-danger btn btn-primary" id="saveChangesButton">保存變更</button>
			
			@{Html.RenderPartial("_MissionTable");}
			

			@*  分頁跳轉 *@
			Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
			@Html.PagedListPager(Model, page => Url.Action("WS_AdmMission",
			new { page}), new PagedListRenderOptions {
			LiElementClasses = new string[] { "page-item" },
			PageClasses = new string[] { "page-link" }})
		</div>

		<!-- 最右邊 -->
		<div class="col-1">
			<!-- 這裡保留空位，不放任何内容 -->
