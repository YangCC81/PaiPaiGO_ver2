@model PaiPaiGO.Models.Mission
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>接任務</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
            @* 地圖API *@
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDVc0hKUxRv8PWCCNNhMsf7m_ZwIoivCZg"></script>
</head>
<style>
    .capsule-button {
        border: 2px solid #007bff;
        border-radius: 25px; /* 控制半圆的圆角半径 */
        padding: 5px 10px;
        background-color: #007bff;
        color: white;
        position: relative;
        overflow: hidden;
    }

        .capsule-button::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 50%;
            height: 100%;
            background-color: #007bff;
            border-radius: 25px 0 0 25px; /* 控制左半圆的圆角半径 */
            transform: translateX(-100%);
        }

        .capsule-button::after {
            content: "";
            position: absolute;
            top: 0;
            right: 0;
            width: 50%;
            height: 100%;
            background-color: #007bff;
            border-radius: 0 25px 25px 0; /* 控制右半圆的圆角半径 */
            transform: translateX(100%);
        }
</style>

<body>
    <div class="row" style="padding-top: 20px;">
        <div class="col-md-1"></div>
        <div class="col-md-10" style="background-color: #CDF4D1;">
            <div class="row">
                <!-- 左邊 -->
                <div class="col-md-6" style="font-size: 25px;padding-left: 40px;">
                    <strong>
                        <p style="color: #176D6B;padding-top: 30px;">代購</p>
                    </strong>
                    <h1>@TempData["BuyMissionName"]</h1>
                    <div style="color: gray;">
                        <span>發布時間:</span>
                        <span>@TempData["BuyOrderTime"]</span>
                    </div>
                    <!-- 任務內容 OK-->
                    <div style="position: relative; width: 400px;">
                        <div style="position: absolute; top: 50px; left: -5px;background-color: #CDF4D1; padding: 5px; height: 20px;">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-clipboard"
                                 width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                 fill="none" stroke-linecap="round" stroke-linejoin="round"
                                 style="display: inline-block; vertical-align: middle; margin-right: -7px; margin-top: -15px;background-color: #CDF4D1;">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2" />
                                <path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z" />
                            </svg>
                            <p style="display: inline-block; vertical-align: middle;background-color: #CDF4D1;">代購內容:</p>
                        </div>
                        <br><br>
                        <div style="border: 1px solid #000; padding: 5px; box-sizing: border-box; overflow: auto;">
                            <textarea style="width: 100%; height: 150px; border: none;background-color: #CDF4D1;">
                                @TempData["BuyMissionDescription"]
            </textarea>
                            <!-- 添加一个可以放置图片的空间 -->
                            <div style="margin-top: 10px;">
                                <!-- 在这里放置图片 -->
                                @if (ViewBag.BuyImageData != null)
                                {
                                    <img src="@ViewBag.BuyImageData" alt="Image from Session" alt="Uploaded Image" style="width:150px" />
                                }
                            </div>
                        </div>
                    </div>
                    <br><br>
                </div>
                <!-- 右邊 -->
                <div class="col-md-6" style="font-size: 25px;">
                    <!-- 標籤 -->
                    <div style="padding-top: 90px;padding-left: 370px;">
                        <button class="capsule-button"><strong>#@TempData["BuyTags"]</strong></button>
                    </div>
                    <br><br>
                    <!-- 截止時間 -->
                    @{
                        DateTime DeadlineDate;
                        TimeSpan DeadlineTime;
                        if (DateTime.TryParse(TempData["BuyDeadlineDate"]?.ToString(), out DeadlineDate))
                        {
                            if (TimeSpan.TryParse(TempData["BuyDeadlineTime"]?.ToString(), out DeadlineTime))
                            {
                                DateTime combinedDateTime = DeadlineDate + DeadlineTime;

                                string datePart = combinedDateTime.ToString("yyyy-MM-dd");
                                string timePart = combinedDateTime.ToString("tt hh:mm:ss");
                                string combined = $"{datePart} {timePart}";

                                ViewBag.CombinedDateTime = combined;
                            }
                        }
                    }
                    <div style="padding-top:20px;">
                        <img src="./img/alarm.svg" alt="">案件截止時間:<span style="color:orange;">@ViewBag.CombinedDateTime</span>
                    </div>
                    <!-- 任務金額 -->
                    <div>
                        <img src="./img/payments_FILL0_wght400_GRAD0_opsz24.svg" alt="">任務金額:<span>@TempData["BuyMissionAmount"]</span>
                    </div>
                    <!-- 配送地點 -->
                    <div>
                        <img src="./img/map-pin.svg" alt="">配送地點:
                        <p style="color:orange;">@TempData["BuyLocationCity"]/@TempData["BuyLocationDistrict"]</p>
                        @* 地圖放置 *@
                        <div id="map" style="height: 400px; width: 100%;"></div>
                    </div>
                    <!-- 接單 -->
                    <div style="padding-left: 370px;">
                        <button type="button" id="updateMissionButton" class="btn btn-primary mt-3" style="background-color: #4B3DE7;font-size: 25px;">接單</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div style="display:none">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MissionId" value="@TempData["BuyMissionId"]" />
        @* 要改變----------------------- *@
        <div class="form-group">
            <label asp-for="AcceptMemberId" class="control-label"></label>
            <input asp-for="AcceptMemberId" class="form-control" value="005" />
            <span asp-validation-for="AcceptMemberId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MissionStatus" class="control-label"></label>
            <input asp-for="MissionStatus" class="form-control" value="接單中" />
            <span asp-validation-for="MissionStatus" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AcceptTime" class="control-label"></label>
            <input asp-for="AcceptTime" class="form-control" value="@TempData["reBuyAcceptTime"]" />
            <span asp-validation-for="AcceptTime" class="text-danger"></span>
        </div>
        <script>
            // 地圖api
            function initialize() {
                var mapOptions = {
                    zoom: 15,
                    center: { lat: 25.0173405, lng: 121.5397518 }  // 台北市的預設經緯度
                };
                map = new google.maps.Map(document.getElementById('map'), mapOptions);
            }
            function geocodeAddress() {
                var geocoder = new google.maps.Geocoder();
                var address = "@TempData["BuyLocationCity"]" + " " + "@TempData["BuyLocationDistrict"]";  // 這裡填入您的縣市和地區字串
                geocoder.geocode({ 'address': address }, function (results, status) {
                    if (status === 'OK') {
                        map.setCenter(results[0].geometry.location);
                        new google.maps.Marker({
                            map: map,
                            position: results[0].geometry.location
                        });
                    } else {
                        alert('Geocode was not successful for the following reason: ' + status);
                    }
                });
            }
            window.onload = function () {
                initialize();  // 初始化地圖
                geocodeAddress();  // 進行地理編碼
            };

            //post-ajax
            document.addEventListener("DOMContentLoaded", function () {
                const updateMissionButton = document.getElementById("updateMissionButton");

                updateMissionButton.addEventListener("click", function () {
                    const missionId = document.querySelector("input[name='MissionId']").value;;
                    const acceptMemberId = document.querySelector("input[name='AcceptMemberId']").value;
                    const missionStatus = document.querySelector("input[name='MissionStatus']").value;
                    const acceptTime = document.querySelector("input[name='AcceptTime']").value;

                    $.ajax({
                        url: '/HS_Get_Text/GetOrder_Buy',
                        method: 'POST',
                        data: {
                            MissionId: missionId,
                            AcceptMemberId: acceptMemberId,
                            MissionStatus: missionStatus,
                            AcceptTime: acceptTime
                        },
                        success: function (response) {
                            if (response.success) {

                                window.location.href = '/HS_Get_Text/Text_Buy/' + missionId;
                            } else {
                                alert('Failed to update mission');
                            }
                        },
                        error: function (err) {
                            alert('Error occurred');
                        }
                    });

                });
            });

        </script>

    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>

</html>